{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "Bundler",
    "composite": true,
    "resolvePackageJsonImports": false,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": ["./style.config.ts"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
