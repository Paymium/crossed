{
  "name": "crossed-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "cross ui lib react-native and web",
  "scripts": {
    "web": "cd apps/web && yarn dev",
    "expo": "turbo run start --filter=crossed-expo",
    "docs": "turbo run dev --filter=crossed-docs",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "watch": "turbo run watch --filter=@crossed* --no-cache",
    "build": "turbo run build --filter=@crossed* --no-cache",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "lint": "eslint packages/**/src --ext .ts,.tsx --config .eslintrc",
    "release": "pnpm build && pnpm publish -r"
  },
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@babel/runtime": "^7.22.10",
    "@changesets/cli": "^2.26.2",
    "@commitlint/config-conventional": "^17.3.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "commitlint": "^17.3.0",
    "eslint": "^8.29.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.7.1",
    "release-it": "^15.5.1",
    "tsc-files": "^1.1.3",
    "turbo": "latest",
    "typescript": "^5.1.6"
  },
  "resolutions": {
    "react-refresh": "~0.14.0"
  }
}
