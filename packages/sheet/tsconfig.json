{
  "include": [
    "src/index.ts", "src/views/FlashList.tsx"],
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "allowJs": true
  },
  "exclude": ["./example", "./expo-example", "./dist", "./docs", "./assets"]
}
