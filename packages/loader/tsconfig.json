{
  "include": ["./src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./lib/typescript",
    "noImplicitAny": true,
    "module": "es6",
    "lib": ["es2017"],
    "target": "ES2015",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
}
