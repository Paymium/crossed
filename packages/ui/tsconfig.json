{
  "include": ["./src"],
  "exclude": ["node_modules", "example"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib/typescript",
    "ignoreDeprecations": "5.0",
    "noEmit": true,
    "declaration": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./src/theme/index.ts"],
    "paths": {
      "@crossed/core": ["./node_modules/@crossed/core/src"],
      "@crossed/styled": ["./node_modules/@crossed/styled/src"],
      "@crossed/primitive": ["./node_modules/@crossed/primitive/src"],
      "@crossed/unicons": ["./node_modules/@crossed/unicons/src"]
    }
  }
}
